{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Air pollution",
    "width": 700,
    "height": 500,
        "projection": {
        "type": "equirectangular"
    },
      "params": [
  {
    "name": "Year_selection",
    "value": 2017,
    "bind": {"input": "range", "min": 2010, "max": 2017, "step": 1, "name": "Year: "}
    }
],
  "layer":[
    {
        "data": {
            "url": "https://raw.githubusercontent.com/Jeremy-Leckning/Data-visualisation-2/main/world_map_topo.json",         
            "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
            }
          },
        "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
                "data": {
                    "url": "https://raw.githubusercontent.com/Jeremy-Leckning/Data-visualisation-2/main/data/PM2.5%20Global%20Air%20Pollution%202010-2017.csv"        
        },
    "transform": [
        {
            "lookup": "Country Name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Jeremy-Leckning/Data-visualisation-2/main/world_map_topo.json",         
                    "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
                },
                "key": "properties.NAME"
            },
             "as": "geo"
        },
{"calculate": "datum[Year_selection]", "as": "Years"}
    ],

    "mark": {
        "type": "geoshape"
    },
    "encoding": {
          "shape": {
        "field": "geo",
        "type": "geojson"
      },
        "color": {
            "field": "Years",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [0, 20, 40 , 60, 80],
                "range": ["#fee5d9", "#fcbba1", "#fc9272", "#fb6a4a", "#de2d26", "#a50f15"]
            }
        },
        "tooltip": [
            {
                "field": "Country Name",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Years",
                "type": "quantitative",
                "title": "Mean annual exposure (micrograms per cubic meter)" 
            }
        ]
    }
    }
  ]
}